{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
